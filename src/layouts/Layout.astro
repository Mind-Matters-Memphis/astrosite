<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/png" href="/faviconbrowser.png" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="title" property="og:title" content={page.title} />
    <meta
      name="description"
      property="og:description"
      content={page.description}
    />
    <meta property="og:locale" content="en_US" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={url ? url : null} />
    <meta property="og:site-name" content="Mind Matters Memphis" />
    <meta name="image" property="og:image" content={thumbnail.src} />
    <meta
      property="og:image:secure_url"
      content="https://github.com/Mind-Matters-Memphis/mindweb/raw/main/src/assets/imgs/logo/logoColorBg.png"
    />
    <meta property="og:image-width" content="1224" />
    <meta property="og:image-height" content="468" />
    <meta name="author" content="Connor Warme" />
    <meta
      name="publish_date"
      property="article:published_time"
      content="2025-02-05"
    />
    <meta property="article:modified_time" content={date.toISOString()} />
